<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_ciudad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Contenedor principal -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_ciudad"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/blue_dark"
            android:title="Ciudad"
            android:titleTextColor="@android:color/white"
            app:navigationIcon="?attr/homeAsUpIndicator"/>

        <!-- Contenido -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- EditText para ciudad -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre de la ciudad"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/blue_dark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_ciudad"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <!-- BotÃ³n Guardar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_guardar_ciudad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar"/>

                <!-- Botones Limpiar y Salir -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_limpiar_ciudad"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Limpiar"
                        android:backgroundTint="@color/blue_dark"
                        android:textColor="@android:color/white"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_salir_ciudad"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Salir"
                        android:backgroundTint="@color/accent_red"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <!-- RecyclerView para mostrar ciudades -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_ciudades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_ciudad"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_menu_principal"
        app:menu="@menu/activity_menu_principal_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>
