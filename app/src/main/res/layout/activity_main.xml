<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccesoActivity">

    <TextView
        android:id="@+id/tv_bienvenidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenidos"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btn_limpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        android:onClick="limpiar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bienvenidos"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btn_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:onClick="inicio"
        app:layout_constraintStart_toStartOf="@id/btn_limpiar"
        app:layout_constraintTop_toBottomOf="@id/btn_limpiar"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:onClick="salir"
        app:layout_constraintStart_toStartOf="@id/btn_inicio"
        app:layout_constraintTop_toBottomOf="@id/btn_inicio"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/txt_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/btn_limpiar"
        app:layout_constraintBottom_toTopOf="@id/txt_pass"
        app:layout_constraintStart_toEndOf="@id/btn_limpiar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"/>

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="ContraseÃ±a"
        android:inputType="numberPassword"
        app:layout_constraintTop_toBottomOf="@id/txt_login"
        app:layout_constraintStart_toStartOf="@id/txt_login"
        app:layout_constraintEnd_toEndOf="@id/txt_login"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
