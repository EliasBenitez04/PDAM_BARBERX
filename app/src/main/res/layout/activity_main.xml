<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".AccesoActivity">

    <TextView
        android:id="@+id/tv_bienvenidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"/>

    <EditText
        android:id="@+id/txt_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:inputType="text"
        android:padding="12dp"
        android:backgroundTint="#2196F3"
        android:drawableStart="@android:drawable/ic_menu_myplaces"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bienvenidos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"/>

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="12dp"
        android:backgroundTint="#2196F3"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt_login"
        app:layout_constraintStart_toStartOf="@id/txt_login"
        app:layout_constraintEnd_toEndOf="@id/txt_login"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:textColor="@android:color/white"
        android:backgroundTint="#4CAF50"
        android:padding="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_pass"
        app:layout_constraintStart_toStartOf="@id/txt_pass"
        app:layout_constraintEnd_toEndOf="@id/txt_pass"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btn_limpiar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#00BCD4"
        android:padding="12dp"
        android:text="Limpiar"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/btn_salir"
        app:layout_constraintStart_toStartOf="@id/btn_inicio"
        app:layout_constraintTop_toBottomOf="@id/btn_inicio" />

    <Button
        android:id="@+id/btn_salir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textColor="@android:color/white"
        android:backgroundTint="#F44336"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_inicio"
        app:layout_constraintStart_toEndOf="@id/btn_limpiar"
        app:layout_constraintEnd_toEndOf="@id/btn_inicio"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_olvide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste tu contraseña?"
        android:textColor="#2196F3"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/btn_salir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
