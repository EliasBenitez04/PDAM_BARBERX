<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_pago"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_pago"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/blue_dark"
            android:title="Pagos"
            android:titleTextColor="@android:color/white"
            app:navigationIcon="?attr/homeAsUpIndicator"/>

        <!-- Contenido -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Fecha del pago -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha del pago"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_fecha_pago"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:focusable="false"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Space android:layout_width="match_parent" android:layout_height="16dp"/>

                <!-- Fin de servicio -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fin de servicio"
                    app:boxBackgroundMode="outline">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_fin_servicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Space android:layout_width="match_parent" android:layout_height="16dp"/>

                <!-- Forma de pago -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Forma de pago"
                    app:boxBackgroundMode="outline">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_forma_pago"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Space android:layout_width="match_parent" android:layout_height="16dp"/>

                <!-- Monto -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Monto"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_monto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:textColor="@android:color/black"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Space android:layout_width="match_parent" android:layout_height="16dp"/>

                <!-- Observación -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Observación"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_observacion_pago"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:gravity="top"
                        android:inputType="textMultiLine"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Space android:layout_width="match_parent" android:layout_height="20dp"/>

                <!-- Botones -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_guardar_pago"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:textSize="16sp"
                        android:text="Guardar"
                        android:backgroundTint="@color/accent_green"
                        android:textColor="@android:color/white"
                        app:cornerRadius="18dp"/>

                    <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_limpiar_pago"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:textSize="16sp"
                        android:text="Limpiar"
                        android:backgroundTint="@color/blue_dark"
                        android:textColor="@android:color/white"
                        app:cornerRadius="18dp"/>

                    <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_salir_pago"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:textSize="16sp"
                        android:text="Salir"
                        android:backgroundTint="@color/accent_red"
                        android:textColor="@android:color/white"
                        app:cornerRadius="18dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_pago"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_menu_principal"
        app:menu="@menu/activity_menu_principal_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>
