<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Nombre del servicio -->
        <TextView
            android:id="@+id/tv_servicio_nombre"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Nombre Servicio"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <!-- Precio -->
        <TextView
            android:id="@+id/tv_servicio_precio"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:gravity="end"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <!-- Estado -->
        <TextView
            android:id="@+id/tv_servicio_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDIENTE"
            android:textSize="14sp"
            android:textColor="@color/blue_dark"
            android:layout_marginStart="8dp"/>

        <!-- Botón Editar -->
        <ImageButton
            android:id="@+id/btn_editar_servicio"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Editar"
            android:tint="@color/blue_dark"
            android:layout_marginStart="8dp"/>

        <!-- Botón Borrar -->
        <ImageButton
            android:id="@+id/btn_borrar_servicio"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Borrar"
            android:tint="@color/accent_red"
            android:layout_marginStart="4dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>

